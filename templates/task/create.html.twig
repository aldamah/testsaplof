{% extends 'base.html.twig' %}

{% block title %}Create Task!{% endblock %}

{% block body %}
    <div class="container py-3">
        {{ form_start(form) }}
        {{ form_rest(form) }}
        <button type="submit" class="btn btn-primary">
            <i class="fa fa-save"></i>
            {{ 'user.button.save' | trans | desc('Save') }}
        </button>
        {{ form_end(form) }}
    </div>
{% endblock %}